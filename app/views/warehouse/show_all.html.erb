<div class="container">
  <%= link_to 'Add new item', add_item_path, :class=>"btn btn-primary" %>
  <table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Producent</th>
      <th>Datasheet</th>
      <th>Category</th>
      <th>Details</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @all_items.each do |item| %>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.producent %></td>
      <td><%= item.datasheet %></td>

      <td><%= item.category.name unless item.category.nil? %></td>
      <td><%= link_to 'Show details', get_item_path(item), :class=>"btn btn-info"%></td>
      <td><%= link_to 'Delete', delete_item_path(item), :class=>"btn btn-danger"%></td>
    </tr>
    <% end %>
  </tbody>

</table>
</div>
